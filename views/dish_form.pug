extends layout 

block content 
  h1=title 
  form(method='POST' action='') 
    div.form-group 
      label(for='dishName') Name of dish: 
      input#dishName.form-control(type='text' name='dishName' value=dish===undefined ? '' : dish.dishName)

    div.form-group 
      label(for=price) Price to sell: 
      input#price.form-control(type='number' min=0 placeholder=0 name='price' value=dish===undefined ? 0 : dish.price)
    button.btn.btn-primary(type='submit') Submit 

  if errors 
    p Errors 
    ul 
      for error in errors 
        li!=error.msg