extends layout 

block content 
  h1= title
  h3= recipe.name
  ul 
    li Ingredients: 
      ul 
        each val in ingredients 
          li
            a(href=val.url) #{val.name}
    li Instructions: 
      ul 
        li #{recipe.instructions}
    li Cost: $#{recipe.value}

  hr 
  p 
    a(href=recipe.url+'/delete') Delete recipe 
  p 
    a(href=recipe.url+'/update') Update recipe 
    